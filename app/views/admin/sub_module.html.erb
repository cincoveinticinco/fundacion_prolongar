<h1>Sub modulos <%=@module_page.name_module%></h1>

<!-- Mensaje de confirmacion-->
<%=flash[:msg] %>
<!-- End Mensaje de confirmacion-->

<a href="/admin/create_sub_module/<%=@module_page.id%>">Crear Sub Modulo</a>
<table border="1">
	 	<thead>
	 		<tr>
	 			<td>Nombre</td>
	 			<td>Descripcion Corta</td>
				 <td>Pdf</td>
	 			<td>Link</td>
				 <td>Link 2</td>
	 			<td>Depende de</td>
				 <td>Orden</td>
				 <td>Imagen</td>
	 			<td>Acciones</td>
	 		</tr>
	 	</thead>
	 	<tbody>
	 		<% @sub_modules.each do |data| %>
	 		<tr>
	 			<td><%=data['sub_module_name'] %></td>
	 			<td><%=data['description'] %></td>
				 <td><a href="<%=data['file_pdf'] %>" target="_blank" >ver Pdf</td>
	 			<td><%=data['link'] %>
	 				<% if  data['link'].include? 'youtu'%>
				   		<% link = data['link'].split('/') %>
				   		<iframe width="560" height="315" src="https://www.youtube.com/embed/<%=link[-1]%>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
		  			<% end %>

		  			<% if  data['link'].include? 'soundcloud'%>
		  					<iframe width="100%" height="95" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=<%=data['link']%>&color=%23dd9781&auto_play=false&hide_related=false&show_comments=false&show_user=true&show_reposts=false&show_teaser=false"></iframe>
		  			<% end %>

	 			</td>
				 <td><%=data['link_2'] %>
				 <%if !data['link_2'].blank? %>
						<% if  data['link_2'].include? 'youtu'%>
							<% link_2 = data['link_2'].split('/') %>
							<iframe width="560" height="315" src="https://www.youtube.com/embed/<%=link_2[-1]%>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
						<% end %>

						<% if  data['link_2'].include? 'soundcloud'%>
								<iframe width="100%" height="95" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=<%=data['link_2']%>&color=%23dd9781&auto_play=false&hide_related=false&show_comments=false&show_user=true&show_reposts=false&show_teaser=false"></iframe>
						<% end %>
				<% end %>

	 			</td>
	 			<td><%=data['name_dependences'] %></td>
				 <td><%=data['order_sub'] %></td>
				 <td><img src="<%=data['image_min'] %>" width="100" height="100"></td>
	 			<td><a href="/admin/create_sub_module/<%=@module_page.id%>/<%=data['id'] %>">Editar</a>/
	 				<a href="/admin/delete_sub_module/<%=data['id'] %>" onclick="return confirm('Desea eliminar este Sub Modulo?')">Eliminar</a>
	 			</td>
	 		</tr>
	 		<% end %>
	 	</tbody>
</table>