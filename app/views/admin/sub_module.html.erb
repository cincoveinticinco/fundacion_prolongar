<h1>Sub modulos <%=@module_page.name_module%></h1>

<!-- Mensaje de confirmacion-->
<%=flash[:msg] %>
<!-- End Mensaje de confirmacion-->

<a href="/admin/create_sub_module/<%=@module_page.id%>">Crear Sub Modulo</a>
<table border="1">
	 	<thead>
	 		<tr>
	 			<td>Nombre</td>
	 			<td>Descripcion Corta</td>
				 <td>Pdf</td>
	 			<td>Link</td>
	 			<td>Depende de</td>
				 <td>Imagen</td>
	 			<td>Acciones</td>
	 		</tr>
	 	</thead>
	 	<tbody>
	 		<% @sub_modules.each do |data| %>
	 		<tr>
	 			<td><%=data['sub_module_name'] %></td>
	 			<td><%=data['description'] %></td>
				 <td><a href="<%=data['file_pdf'] %>" target="_blank" >ver Pdf</td>
	 			<td><%=data['link'] %>
	 				<% if  data['link'].include? 'youtu'%>
				   		<% link = data['link'].split('/') %>
						<iframe id="ytplayer" type="text/html" width="640" height="360" src="http://www.youtube.com/embed/<%=link[-1]%>?autoplay=1" frameborder="0"/></iframe>
		  			<% end %>

		  			<% if  data['link'].include? 'soundcloud'%>
		  					<iframe width="100%" height="95" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=<%=data['link']%>&color=%23dd9781&auto_play=false&hide_related=false&show_comments=false&show_user=true&show_reposts=false&show_teaser=false"></iframe>
		  			<% end %>

	 			</td>
	 			<td><%=data['name_dependences'] %></td>
				 <td><img src="<%=data['image_min'] %>" width="100" height="100"></td>
	 			<td><a href="/admin/create_sub_module/<%=@module_page.id%>/<%=data['id'] %>">Editar</a>/
	 				<a href="/admin/delete_sub_module/<%=data['id'] %>" onclick="return confirm('Desea eliminar este Sub Modulo?')">Eliminar</a>
	 			</td>
	 		</tr>
	 		<% end %>
	 	</tbody>
</table>