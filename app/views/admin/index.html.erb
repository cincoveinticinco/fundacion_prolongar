<h1 style="color:#d48071" class="fw-bold mb-4 text-center text-uppercase">Administrador de contenido</h1>


<!-- Mensaje de confirmacion-->

<div id="snackbar"><%=flash[:msg] %></div>
     
  
<!-- End Mensaje de confirmacion-->

<div class="container">
	<div id="accordion">
		<h3 class="text-uppercase">Administradores</h3>
		<div>
			<a href="create_admin" class="btn-create">Crear Administrador</a>
			<table border="1" class="table mt-3">
					<thead>
						<tr>
							<th>Usuario</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						<% @user_admin.each do |data| %>
						<tr>
							<td><%=data['name'] %></td>
							<td>
								<a href="/admin/create_admin/<%=data['id'] %>" class="btn-editar">Editar</a>
								<% if @user_admin.length !=1 %>
									<a href="/admin/delete_admin/<%=data['id'] %>" class="btn-eliminar" onclick="return confirm('Desea eliminar este Administrador?')">Eliminar</a>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
			</table>
		</div>


		<h3 class="text-uppercase">Banner Home</h3>

		<div>
			<a href="create_home_banner" class="btn-create">Crear Banner</a>
			<table border="1" class="table mt-3">
					<thead>
						<tr>
							<th>Orden</th>
							<th>Imagen Banner</th>
							<th colspan="2" class="text-center">Acciones</th>
						</tr>
					</thead>
					<tbody>
						<% @home_banners.each do |data| %>
						<tr>
							<td><%=data['order_banner'] %></td>
							<td><img src="<%=data['image'] %>" width="120" height="80"></td>
							<td class="text-center">
								<a href="/admin/create_home_banner/<%=data['id'] %>" class="btn-editar">Editar</a>
							</td>
							<td class="text-center">
								<a href="/admin/delete_home_banner/<%=data['id'] %>" class="btn-eliminar" onclick="return confirm('Desea eliminar este Banner?')">Eliminar</a>
							</td>
							
						</tr>
						<% end %>
					</tbody>
			</table>
		</div>

		<h3 class="text-uppercase">Menú</h3>

		<div>
			
			<table border="1" class="table mt-3">
					<thead>
						<tr>
							<th>Menú</th>
							<th>Texto</th>
							<th>Imagén</th>
							<th>Acciones</th>
			
						</tr>
					</thead>
					<tbody>
						<% @menu_contents.each do |data| %>
						<tr>
							<td><%=data['name_page'] %></td>
							<td><%=data['texto'] %></td>
							<td><img src="<%=data['image'] %>" width="120" height="80"></td>
							<td><a href="/admin/create_menu/<%=data['id'] %>" class="btn-editar">Editar</a>
						</tr>
						<% end %>
					</tbody>
			</table>
		</div>



		<h3 class="text-uppercase">Módulos</h3>
		<div>
			<a href="create_module" class="btn-create">Crear Módulo</a>
			<table border="1" class="table mt-3">
					<thead>
						<tr>
							<th>Nombre del Módulo</th>
							<th>Imagen Módulo</th>
							<th>Color</th>
							<th>Descripción Corta</th>
							<th>Banner</th>
							<th>Sub Módulos</th>
							<th colspan="2">Acciones</th>
						</tr>
					</thead>
					<tbody>
						<% @module_pages.each do |data| %>
						<tr>
							<td><%=data['name_module'] %></td>
							<td><img src="<%=data['imagen_min'] %>" width="100" height="100"></td>
							<td><%=data['color_module'] %></td>
							<td><%=data['description'] %></td>
							<td><img src="<%=data['img_banner'] %>" width="100" height="100"></td>
							<td><a class="text-warning" href="/admin/sub_module/<%=data['id'] %>">Ver Sub modulos</a></td>
							<td>
								<a href="/admin/create_module/<%=data['id'] %>" class="btn-editar">Editar</a>
							</td>
							<td>
								<a href="/admin/delete_module/<%=data['id'] %>" class="btn-eliminar" onclick="return confirm('Desea eliminar este Modulo?')">Eliminar</a>
							</td>
						</tr>
						<% end %>
					</tbody>
			</table>
		</div>

		<h3 class="text-uppercase">Registros</h3>
		<div>
			<td>
				<button class="btn-registro">
					<%= link_to "Descargar Registros", excel_download_path(:format => "xlsx") %>
				</button>
			</td> 		
		</div>

		<h3 class="text-uppercase">Contáctenos</h3>

		<div>
			<% if @contacts.blank?%>
				<a href="create_contact" class="btn-create">Crear Contactos</a>
			<% end %>
			<table border="1" class="table mt-3">
					<thead>
						<tr>
							<th>Nombre</th>
							<th>Dirección</th>
							<th>Edificio</th>
							<th>Ciudad</th>
							<th>Teléfono</th>
							<th>Email</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						<% @contacts.each do |data| %>
						<tr>
							<td><%=data['name'] %></td>
							<td><%=data['direccion'] %></td>
							<td><%=data['edificio'] %></td>
							<td><%=data['ciudad'] %></td>
							<td><%=data['telefono'] %></td>
							<td><%=data['email'] %></td>
							<td><a href="/admin/create_contact/<%=data['id'] %>" class="btn-editar">Editar</a>
							</td>
						</tr>
						<% end %>
					</tbody>
			</table>
		</div>
	</div>

</div>

