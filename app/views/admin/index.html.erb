<h1>Adminstrador de contenido</h1>

<!-- Mensaje de confirmacion-->
<%=flash[:msg] %>
<!-- End Mensaje de confirmacion-->

<div id="accordion">
	<h3>Banner Home</h3>
	<div>
		<p><%= link_to "Agregar Banner",  "new_banner" %></p>
				<% HomeBanner.all.each do |homeb| %>
			<div>
				<td>Order </td><td> <%= homeb.order %></td>
			</div>
			<div>
				<td><%= image_tag("/images_banner/#{homeb.image}", size: '130x100') %></td>
			</div>
			<p><%= link_to "Eliminar",  "eliminar" %></p>
		<%end%>

	</div>

	<h3>Contactenos</h3>
	<div>
		<p><%= link_to "Agregar Contacts",  "new_contacts" %></p>
		<% Contact.all.each do |contact| %>
			<div>
				<%= contact.name %>
				<%= contact.direccion %>
				<%= contact.edificio %>
				<%= contact.ciudad %>
				<%= contact.telefono %>
				<%= contact.email %>
			</div>
		<%end%>
	</div>
	<h3>Modulos</h3>
	<div>
		<a href="create_module">Crear Modulo</a>
		<table border="1">
			 	<thead>
			 		<tr>
			 			<td>Nombre del Modulo</td>
			 			<td>Imagen Modulo</td>
			 			<td>Descripcion Corta</td>
			 			<td>Banner</td>
			 			<td>Acciones</td>
			 		</tr>
			 	</thead>
			 	<tbody>
			 		<% @module_pages.each do |data| %>
			 		<tr>
			 			<td><%=data['name_module'] %></td>
			 			<td><img src="<%=data['imagen_min'] %>" width="100" height="100"></td>
			 			<td><%=data['description'] %></td>
			 			<td><img src="<%=data['img_banner'] %>" width="100" height="100"></td>
			 			<td><a href="/admin/create_module/<%=data['id'] %>">Editar</a>/
			 				<a href="/admin/delete_module/<%=data['id'] %>" onclick="return confirm('Desea eliminar este Modulo?')">Eliminar</a>
			 			</td>
			 		</tr>
			 		<% end %>
			 	</tbody>
		</table>
	</div>
</div>
