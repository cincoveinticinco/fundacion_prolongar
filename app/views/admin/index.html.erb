<h1>Adminstrador de contenido</h1>

<!-- Mensaje de confirmacion-->
<%=flash[:msg] %>
<!-- End Mensaje de confirmacion-->

<div id="accordion">
	<h3>Administradores</h3>
	<div>
		<a href="create_admin">Crear Administrador</a>
		<table border="1">
			 	<thead>
			 		<tr>
			 			<td>Usuario</td>
			 			<td>Acciones</td>
			 		</tr>
			 	</thead>
			 	<tbody>
			 		<% @user_admin.each do |data| %>
			 		<tr>
			 			<td><%=data['name'] %></td>
			 			<td>
			 				<a href="/admin/create_admin/<%=data['id'] %>">Editar</a>
			 				<% if @user_admin.length !=1 %>
			 					/
			 					<a href="/admin/delete_admin/<%=data['id'] %>" onclick="return confirm('Desea eliminar este Administrador?')">Eliminar</a>
			 				<% end %>
			 			</td>
			 		</tr>
			 		<% end %>
			 	</tbody>
		</table>
	</div>


	<h3>Banner Home</h3>

	<div>
		<a href="create_home_banner">Crear Banner</a>
		<table border="1">
			 	<thead>
			 		<tr>
			 			<td>Order</td>
			 			<td>Imagen Banner</td>
			 			<td>Acciones</td>
			 		</tr>
			 	</thead>
			 	<tbody>
			 		<% @home_banners.each do |data| %>
			 		<tr>
			 			<td><%=data['order_banner'] %></td>
			 			<td><img src="<%=data['image'] %>" width="120" height="80"></td>
			 			<td><a href="/admin/create_home_banner/<%=data['id'] %>">Editar</a>/
			 				<a href="/admin/delete_home_banner/<%=data['id'] %>" onclick="return confirm('Desea eliminar este Banner?')">Eliminar</a>
			 			</td>
			 		</tr>
			 		<% end %>
			 	</tbody>
		</table>
	</div>

	<h3>Menú</h3>

	<div>
		
		<table border="1">
			 	<thead>
			 		<tr>
			 			<td>Menu</td>
						<td>Texto</td>
						<td>Imagén</td>
						<td>Acciones</td>
		
			 		</tr>
			 	</thead>
			 	<tbody>
			 		<% @menu_contents.each do |data| %>
			 		<tr>
			 			<td><%=data['name_page'] %></td>
						<td><%=data['texto'] %></td>
						<td><img src="<%=data['image'] %>" width="120" height="80"></td>
			 			<td><a href="/admin/create_menu/<%=data['id'] %>">Editar</a>
			 		</tr>
			 		<% end %>
			 	</tbody>
		</table>
	</div>


	<h3>Modulos</h3>
	<div>
		<a href="create_module">Crear Modulo</a>
		<table border="1">
			 	<thead>
			 		<tr>
			 			<td>Nombre del Modulo</td>
			 			<td>Imagen Modulo</td>
			 			<td>Descripcion Corta</td>
			 			<td>Banner</td>
			 			<td>Sub Modulos</td>
			 			<td>Acciones</td>
			 		</tr>
			 	</thead>
			 	<tbody>
			 		<% @module_pages.each do |data| %>
			 		<tr>
			 			<td><%=data['name_module'] %></td>
			 			<td><img src="<%=data['imagen_min'] %>" width="100" height="100"></td>
			 			<td><%=data['description'] %></td>
			 			<td><img src="<%=data['img_banner'] %>" width="100" height="100"></td>
			 			<td><a href="/admin/sub_module/<%=data['id'] %>">Ver Sub modulos</a></td>
			 			<td><a href="/admin/create_module/<%=data['id'] %>">Editar</a>/
			 				<a href="/admin/delete_module/<%=data['id'] %>" onclick="return confirm('Desea eliminar este Modulo?')">Eliminar</a>
			 			</td>
			 		</tr>
			 		<% end %>
			 	</tbody>
		</table>
	</div>

	<h3>Registros</h3>
	<div>
		 <td><%= link_to "Descargar Registros", excel_download_path(:format => "xlsx") %></td> 		
	</div>

	<h3>Contactenos</h3>
	<div>
		<% if @contacts.blank?%>
			<a href="create_contact">Crear Contactos</a>
		<% end %>
		<table border="1">
			 	<thead>
			 		<tr>
			 			<td>Nombre</td>
			 			<td>Direccion</td>
						 <td>Edificio</td>
						 <td>Ciudad</td>
						 <td>Telefono</td>
						 <td>Email</td>
						 <td>Acciones</td>
			 		</tr>
			 	</thead>
			 	<tbody>
			 		<% @contacts.each do |data| %>
			 		<tr>
			 			<td><%=data['name'] %></td>
						<td><%=data['direccion'] %></td>
						<td><%=data['edificio'] %></td>
						<td><%=data['ciudad'] %></td>
						<td><%=data['telefono'] %></td>
						<td><%=data['email'] %></td>
			 			<td><a href="/admin/create_contact/<%=data['id'] %>">Editar</a>
			 			</td>
			 		</tr>
			 		<% end %>
			 	</tbody>
		</table>
	</div>
</div>
